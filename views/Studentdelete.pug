extends layout 
 
block content 
  h1= title 
 
  if (toShow == null) 
    h2 No instance to delete 
  else 
    - let Studentid = toShow._id 
    - let Name  = toShow.Name 
    - let Age = toShow.Age 
    - let Address = toShow.Address 
    - let actionid = "/resource/Students/" + Studentid 
    script let actionid = "#{actionid}" 
    div 
      div.row 
        div(class='StudentAttr mr-3') Student ID is: 
        div #{Studentid} 
      div.row 
        div(class='StudentAttr mr-3') Student Name is: 
        div #{Name} 
      div.row 
        div(class='StudentAttr mr-3') Student Age is: 
        div #{Age} 
      div.row 
        div(class='StudentAttr mr-3') Student Address is: 
        div #{Address} 
 
    button(class="btn btn-danger m-2" onclick="deleteOnid()") Delete 
    button(class="btn btn-secondary m-2" onclick="cancel()") Cancel 
 
  script. 
    function cancel() { 
      // Go back to the home page for the costume collection 
      window.location.href='/costumes' 
    } 
  script. 
    function deleteOnid() { 
      console.log("starting delete") 
      // delete first 
      fetch(actionid, { 
        method: 'DELETE'      
      }).then((resp) => { 
        return resp.json(); // or resp.text() or whatever the server sends 
      }).then((body) => { 
        alert("Delete succeded") 
        window.location.href='/costumes' 
        // TODO handle body 
      }).catch((error) => { 
        // TODO handle error 
        alert("Delete failed " + error ) 
      }); 
    } 